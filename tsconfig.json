{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "baseUrl": "src",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules/*",
    "test/**/*"
  ]
}